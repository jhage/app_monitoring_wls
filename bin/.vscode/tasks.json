{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "echo",
            "type": "shell",
            "command": "echo Hello"
        },

        {
            "label": "compile",
            "type": "shell",
            "command": "javac -g ${file}",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "run java",
            "type": "shell",
            "command": "java ",
            "args": [
                "${workspaceRoot}/bin/${fileBasenameNoExtension}"
            ],
        }
    ]
}